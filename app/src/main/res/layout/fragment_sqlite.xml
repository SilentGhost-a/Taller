<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.sqlite.SQLiteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de cédula" />

        <EditText
            android:id="@+id/edt_SQLCedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite su número de cédula"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre completo" />

        <EditText
            android:id="@+id/edt_SQLNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite su nombre"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edad" />

        <EditText
            android:id="@+id/edt_SQLEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite su edad"
            android:inputType="number" />

    </LinearLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:id="@+id/btn_SQLAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar"
            android:layout_column="0"
            android:layout_row="0"/>
        <Button
            android:id="@+id/btn_SQLBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginStart="15dp"/>

        <Button
            android:id="@+id/btn_SQLEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:layout_column="0"
            android:layout_row="1"/>

        <Button
            android:id="@+id/btn_SQLEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:layout_marginStart="15dp"
            android:layout_column="1"
            android:layout_row="1"/>
    </GridLayout>
</androidx.appcompat.widget.LinearLayoutCompat>